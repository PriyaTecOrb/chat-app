<!-- app/views/users/_user.html.erb -->
<%= link_to user_path(user), 
    class: "list-group-item list-group-item-action d-flex justify-content-between align-items-center" do %>
  <div class="d-flex align-items-center">
    <div class="position-relative me-3">
      <%= image_tag user.avatar_url || "default-avatar.png", 
            class: "rounded-circle", 
            style: "width: 40px; height: 40px; object-fit: cover;" %>
      <span class="position-absolute bottom-0 end-0 p-1 bg-<%= user.online? ? 'success' : 'secondary' %> border border-light rounded-circle">
        <span class="visually-hidden"><%= user.online? ? 'Online' : 'Offline' %></span>
      </span>
    </div>
    
    <div>
      <h6 class="mb-0"><%= user.username %></h6>
      <small class="text-muted">
        <%= user.online? ? "Online" : "Last seen #{time_ago_in_words(user.last_seen_at)} ago" %>
      </small>
    </div>
  </div>
  
  <i class="bi bi-chevron-right text-muted"></i>
<% end %>